<div class="container">


<div class="col-md-6 col-md-offset-3">
	<div class="simple-box">
	<h1>Bienvenido a Crédito para ti</h1>
	<%= bootstrap_form_for(:user, url: sessions_path) do |f| %>
		
		<%= f.text_field :email, label: 'Usuario', icon: "user" %>
		<br>
		<%= f.password_field :password, label: 'Contraseña', icon: "lock" %>
		<br>
		<div class="col-md-4 text-center">
			<%= f.submit 'Iniciar sesión', class: "btn btn-success" %>
		</div>

	<% end %>
	<%= link_to "Nuevo usuario", singup_path %>
	</div>
</div>

</div>