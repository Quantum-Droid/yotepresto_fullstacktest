<p id="notice"><%= notice %></p>

<h1>Listing Personal References</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Second name</th>
      <th>First last name</th>
      <th>Second last name</th>
      <th>Cell phone number</th>
      <th>Requisition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personal_references.each do |personal_reference| %>
      <tr>
        <td><%= personal_reference.first_name %></td>
        <td><%= personal_reference.second_name %></td>
        <td><%= personal_reference.first_last_name %></td>
        <td><%= personal_reference.second_last_name %></td>
        <td><%= personal_reference.cell_phone_number %></td>
        <td><%= personal_reference.requisition %></td>
        <td><%= link_to 'Show', personal_reference %></td>
        <td><%= link_to 'Edit', edit_personal_reference_path(personal_reference) %></td>
        <td><%= link_to 'Destroy', personal_reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

